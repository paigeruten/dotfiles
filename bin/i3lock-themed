#!/bin/sh

# I use a modified version of `i3lock` from https://github.com/eBrnd/i3lock-color
# which lets you theme the little circle-ma-bob that has such ugly colours by
# default. (I don't know if I did much better...)

i3lock -i ~/images/backgrounds/current.png -t \
         --insidevercolor=002b365f \
       --insidewrongcolor=002b365f \
            --insidecolor=002b365f \
           --ringvercolor=002b365f \
         --ringwrongcolor=cb4b165f \
              --ringcolor=002b365f \
              --textcolor=cb4b165f \
              --linecolor=002b365f \
             --keyhlcolor=cb4b165f \
              --bshlcolor=ff00005f

