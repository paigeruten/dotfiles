# Use command (Apple) key as $mod.
set $mod Mod4

# Font for window titles.
font pango:Inconsolata 10

# Hook up backlight brightness keys to `xbacklight`.
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# Hook up keyboard brightness keys to `kbdlight`.
bindsym XF86KbdBrightnessUp exec --no-startup-id kbdlight up
bindsym XF86KbdBrightnessDown exec --no-startup-id kbdlight down

# Hook up media keys to `cmus` (music player).
bindsym XF86AudioPrev exec --no-startup-id cmus-remote --prev
bindsym XF86AudioPlay exec --no-startup-id cmus-remote --pause
bindsym XF86AudioNext exec --no-startup-id cmus-remote --next

# Hook up audio keys to `pulseaudio-ctl` (volume controller).
# Also send the USR1 signal to update the i3status bar with the new volume.
bindsym XF86AudioMute        exec --no-startup-id pulseaudio-ctl mute && killall -USR1 i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pulseaudio-ctl down && killall -USR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pulseaudio-ctl up   && killall -USR1 i3status

# Start `chromium` web browser (mnemonic: it's also the `<` key, indicating HTML).
bindsym $mod+comma exec chromium

# Start a web browser instance that's configured for Pencil Code development.
bindsym $mod+Shift+comma exec chromium --host-resolver-rules="MAP *pencilcode.net.dev localhost:8008" --user-data-dir=$HOME/.devchrome --ignore-certificate-errors http://pencilcode.net.dev/

# Start `thunar` file manager (mnemonic: `.` and `..`, the ubiquitous folders).
bindsym $mod+period exec thunar

# Lock screen (using themed version of `i3lock`).
bindsym XF86PowerOff exec --no-startup-id /home/jeremy/bin/i3lock-themed

# Turn on/off external monitor using plus/minus keys.
bindsym $mod+minus exec --no-startup-id xrandr --output HDMI2 --off
bindsym $mod+equal exec --no-startup-id xrandr --output HDMI2 --auto --right-of eDP1

# Invert screen colours using $mod+i.
bindsym $mod+i exec --no-startup-id xrandr-invert-colors

# Use mouse+$mod to drag floating windows.
floating_modifier $mod

# Start a terminal.
bindsym $mod+Return exec termite

# Put workspaces 1-5 on laptop screen, 6-10 on external monitor.
workspace 1 output eDP1
workspace 2 output eDP1
workspace 3 output eDP1
workspace 4 output eDP1
workspace 5 output eDP1
workspace 6 output HDMI2
workspace 7 output HDMI2
workspace 8 output HDMI2
workspace 9 output HDMI2
workspace 10 output HDMI2

# Kill focused window.
bindsym $mod+Shift+q kill

# Start `dmenu` (a program launcher).
bindsym $mod+d exec dmenu_run

# Change focus.
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# Move focused window.
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# Split in horizontal orientation.
bindsym $mod+h split h

# Split in vertical orientation.
bindsym $mod+v split v

# Enter fullscreen mode for the focused container.
bindsym $mod+f fullscreen

# Change container layout (stacked, tabbed, toggle split).
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling/floating.
bindsym $mod+Shift+space floating toggle

# Change focus between tiling/floating windows.
bindsym $mod+space focus mode_toggle

# Focus the parent container.
bindsym $mod+a focus parent

# Switch to workspace.
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# Move focused container to workspace.
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# Reload the config file.
bindsym $mod+Shift+c reload

# Restart i3 inplace.
bindsym $mod+Shift+r restart

# Exit i3.
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Are you sure?' -b 'Yes, exit i3' 'i3-msg exit'"

# Go into resize mode.
bindsym $mod+r mode "resize"

# These bindings trigger as soon as you enter the resize mode.
mode "resize" {
  # Use directional keys to resize the window.
  bindsym j resize shrink width 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym l resize shrink height 10 px or 10 ppt
  bindsym semicolon resize grow width 10 px or 10 ppt

  # Press enter or escape to leave resize mode.
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# An orange, white, & grey theme.
  # color class           border  backgr. text    indicator
  client.focused          #ee6600 #ff7700 #ffffff #ffaa44
  client.focused_inactive #555555 #444444 #aaaaaa #777777
  client.unfocused        #333333 #222222 #888888 #555555
  client.urgent           #3a342f #900000 #ffffff #c00000

# Configure i3bar.
bar {
  # Use `i3status` to output status info.
  status_command i3status

  # Same font as window titles.
  font pango:Inconsolata 10

  # Same colours defined in the theme above, but with a dark background.
  colors {
    background #111111
    statusline #ffffff
    separator #666666

    # color class      border  backgr. text
    focused_workspace  #ff7700 #dd6600 #ffffff
    active_workspace   #aa5500 #884400 #cccccc
    inactive_workspace #333333 #222222 #888888
    urgent_workspace   #2f343a #900000 #ffffff
  }
}

